{
    "manifest_version": 2,
    "name": "ELB Troubleshooter",
    "description": "Tool for troubleshooting AWS ELB",
    "version": "1.0",

    "browser_action": {
    "default_icon": "static/icon.png",
    "default_popup": "popup.html",
    "default_title": "ELB Troubleshooter"

    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "permissions": [
        "webRequest",
        "tabs","<all_urls>",
        "storage"
    ],

    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "exclude_matches": ["*://*/*"],
        "css": [],
        "js": ["content.js"]
       }
    ]
}