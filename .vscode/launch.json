{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${env:vsWorkspaceRoot}/assets"
        },{
            "type": "chrome",
            "request": "launch",
            "name": "chrome against file",
            "url": "http://localhost:8080",
            "file": "${env:vsWorkspaceRoot}/assets/index.html"
        }, {
            "type": "node",
            "request": "launch",
            "name": "node sandbox",
            "program": "${env:vsWorkspaceRoot}\\src\\sandbox\\sandbox.js",
            "cwd": "${env:vsWorkspaceRoot}\\src\\sandbox",
            "outFiles": ["${env:vsWorkspaceRoot}/src/sandbox/.babel.compiled/**/*.js"],
            "runtimeArgs": ["--nolazy"],
            "sourceMaps": true
        }, {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "runtimeExecutable": "nodemon",
            "program": "${env:vsWorkspaceRoot}\\src\\sandbox\\src\\sandbox.js",
            "runtimeArgs": ["--exec", "babel-node"],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }, {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 9229
        }, {
            "name": "jest",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${env:vsWorkspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand",
                "sandbox"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229,
            "cwd": "${env:vsWorkspaceRoot}"
        }
    ]
}